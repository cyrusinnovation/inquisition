<!DOCTYPE html>
<html lang="en">
<head>
  <title>Jumper Login</title>
  <meta name="viewport" content="width = 550"/>
  <link type="text/css" rel="stylesheet" href="${contextPath}/style/places.css"/>
</head>
<body>
<div class="site-header"></div>
<div class="content">
  #if (parameter("failure") != null)
  #if ( parameter("failure").toBoolean )
  <h2 style="color: red">Login Failed!</h2>
  #end
  #end

  <h1>Please login:</h1>

    <form method="POST" action="j_spring_security_check">
    <table>
      <tr>
        <td><label for="username">Username:</label></td>
        <td><input id="username" type="text" name="j_username" autofocus="true"/></td>
      </tr>
      <tr>
        <td><label for="password">Password:</label></td>
        <td><input id="password" type="password" name="j_password"/></td>
      </tr>
    </table>
    #if (request.getParameter("targetUrl") != null)
    <input type="hidden" name="spring-security-redirect" value='${request.getParameter("targetUrl")}'/>
      <!-- this may be needed to keep it going for login failure -->
    <input type="hidden" name="targetUrl" value='${request.getParameter("targetUrl")}'/>
    #end
        <label>
            Remember me:
            <input type="checkbox" name="_spring_security_remember_me"/>
        </label>
        <br/>
        <input type="submit" value="Login"/>
  </form>
  <script type="text/javascript">
    if (!("autofocus" in document.createElement("input"))) {
      document.getElementById("username").focus();
    }
  </script>
</div>
</body>
</html>
