#import (com.cyrusinnovation.inquisition.questions.Question)
<% attributes("title") = "Jumper" %>
<%@ val questions: List[Question] %>

<div class="content">
  <h1>Recent Questions</h1>

    <a href="${contextPath}/questions/new">New Question</a>

    <ul>
        #for (q <- questions)
            <li>${q.title} : ${q.body.take(10)}...</li>
        #end
    </ul>
</div>
